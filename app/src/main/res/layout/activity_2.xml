<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context=".Activity2"
    android:background="@drawable/sunroad">

    <androidx.cardview.widget.CardView
        android:layout_width="320dp"
        android:layout_height="350dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="50dp"
        app:cardElevation="50dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:src="@drawable/bird"
                    android:scaleType="centerCrop"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="個人資料權利"
                    android:textAlignment="center"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/yangran"
                    android:textColor="#1E1E1E"
                    android:textSize="30sp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:layout_margin="10dp"
                    android:text="1. 您有權瞭解我們處理哪些有關您的個人資料，並要求存取這些資料"
                    android:textSize="20sp"
                    android:fontFamily="@font/yangran"
                    android:textColor="#1E1E1E"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:layout_margin="10dp"
                    android:text="2. 您有權瞭解我們處理哪些有關您的個人資料，以及處理的方式"
                    android:textSize="20sp"
                    android:fontFamily="@font/yangran"
                    android:textColor="#1E1E1E"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:layout_margin="10dp"
                    android:text="3. 您有權要求我們修改或更新不正確或不完整的個人資料"
                    android:textSize="20sp"
                    android:fontFamily="@font/yangran"
                    android:textColor="#1E1E1E"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:layout_margin="10dp"
                    android:text="4. 您有權要求我們暫時或永久停止處理您的所有或部分個人資料"
                    android:textSize="20sp"
                    android:fontFamily="@font/yangran"
                    android:textColor="#1E1E1E"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:layout_margin="10dp"
                    android:text="5. 您有權要求我們消除您的個人資料"
                    android:textSize="20sp"
                    android:fontFamily="@font/yangran"
                    android:textColor="#1E1E1E"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:layout_margin="5dp"
                    android:text="聯絡我們"
                    android:textSize="30sp"
                    android:fontFamily="@font/yangran"
                    android:textColor="#1E1E1E"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:layout_margin="20dp"
                    android:text="傳送電子郵件至 privacy@can.com"
                    android:textSize="20sp"
                    android:fontFamily="@font/yangran"
                    android:textColor="#1E1E1E"/>

            </LinearLayout>

        </ScrollView>

    </androidx.cardview.widget.CardView>

</LinearLayout>
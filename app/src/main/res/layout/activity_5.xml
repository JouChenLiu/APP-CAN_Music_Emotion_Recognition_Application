<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@drawable/mountain"
    tools:context=".Activity5">

    <androidx.cardview.widget.CardView
        android:layout_width="320dp"
        android:layout_height="350dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="50dp"
        app:cardElevation="50dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:src="@drawable/orange_bird"
                    android:scaleType="centerCrop"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="常見問題"
                    android:textAlignment="center"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/yangran"
                    android:textColor="#1E1E1E"
                    android:textSize="30sp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:layout_margin="1dp"
                    android:text=""
                    android:textSize="3sp"
                    android:fontFamily="@font/stone"
                    android:textColor="#575555"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:layout_margin="5dp"
                    android:text="Q. 我的帳戶好像有問題"
                    android:textSize="20sp"
                    android:fontFamily="@font/yangran"
                    android:textColor="#1E1E1E"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:layout_margin="2dp"
                    android:text="請確認登入帳戶，若仍無法登入，請嘗試更改密碼或連繫我們"
                    android:textSize="18sp"
                    android:fontFamily="@font/yangran"
                    android:textColor="#575555"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:layout_margin="2dp"
                    android:text=""
                    android:textSize="5sp"
                    android:fontFamily="@font/stone"
                    android:textColor="#575555"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:layout_margin="5dp"
                    android:text="Q. 忘記登入資料了"
                    android:textSize="20sp"
                    android:fontFamily="@font/yangran"
                    android:textColor="#1E1E1E"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:layout_margin="2dp"
                    android:text="請嘗試更改密碼或連繫我們"
                    android:textSize="18sp"
                    android:fontFamily="@font/yangran"
                    android:textColor="#575555"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:layout_margin="2dp"
                    android:text=""
                    android:textSize="5sp"
                    android:fontFamily="@font/stone"
                    android:textColor="#575555"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:layout_margin="5dp"
                    android:text="Q. Can的電池使用情況"
                    android:textSize="20sp"
                    android:fontFamily="@font/yangran"
                    android:textColor="#1E1E1E"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:layout_margin="2dp"
                    android:text="請在使用時，檢查電池耗電情況，若為異常，請減少同時使用的應用，或開啟手機的低電量模式"
                    android:textSize="18sp"
                    android:fontFamily="@font/yangran"
                    android:textColor="#575555"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:layout_margin="2dp"
                    android:text=""
                    android:textSize="5sp"
                    android:fontFamily="@font/stone"
                    android:textColor="#575555"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:layout_margin="5dp"
                    android:text="聯絡我們"
                    android:textSize="30sp"
                    android:fontFamily="@font/yangran"
                    android:textColor="#1E1E1E"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:layout_margin="5dp"
                    android:text="如有任何問題，請聯絡我們，Can將提供必要協助"
                    android:textSize="20sp"
                    android:fontFamily="@font/yangran"
                    android:textColor="#8E3535"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:layout_margin="20dp"
                    android:text="傳送電子郵件至 privacy@can.com"
                    android:textSize="20sp"
                    android:fontFamily="@font/yangran"
                    android:textColor="#1E1E1E"/>

            </LinearLayout>

        </ScrollView>

    </androidx.cardview.widget.CardView>

</LinearLayout>